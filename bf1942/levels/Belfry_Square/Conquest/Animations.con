GeometryTemplate.create StandardMesh CP_Circle_Blue_m1
GeometryTemplate.file CP_Circle_Blue_m1
GeometryTemplate.alphaLodDistance 1024


ObjectTemplate.create SimpleObject CP_Circle_Nu
ObjectTemplate.geometry CP_Circle_Nu_m1
ObjectTemplate.cullRadiusScale 5

ObjectTemplate.create SimpleObject CP_Circle_Red
ObjectTemplate.geometry CP_Circle_Red_m1
ObjectTemplate.cullRadiusScale 5

ObjectTemplate.create SimpleObject CP_Circle_Blue
ObjectTemplate.geometry CP_Circle_Blue_m1
ObjectTemplate.cullRadiusScale 5



ObjectTemplate.create AnimatedBundle Belfry_Flag_NU_m1
ObjectTemplate.geometry Belfry_Flag_NU_m1
ObjectTemplate.createSkeleton Animations/Belfry_Flag.ske
ObjectTemplate.setAnimationState Belfry_Flag_Idle
